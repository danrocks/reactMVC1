<script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>


<script type="text/babel">
    var HelloWorldComponent = React.createClass({
        getInitialState : function(){
            return {
                serverMessage : ""
            };
        },
        componentDidMount : function(){
            //fetch data from server
            $.get('home/getmessage', function(result){
                if(this.isMounted)    
                 {
                    this.setState({

                        serverMessage : result
                    });
                }
            }.bind(this));
        },
        render : function(){
            return (<h1>{this.state.serverMessage}</h1>);
        }

    });

    var another = React.createClass({
        render: function(){
            return (<h1>holt toledo</h1>);
    }
    });

     ReactDOM.render(<HelloWorldComponent />,document.getElementById("helloworldcontainer"));
    ReactDOM.render(    <another />,document.getElementById("cripe"));
</script>